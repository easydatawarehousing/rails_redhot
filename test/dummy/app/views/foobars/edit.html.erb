<h1 class="text-lg font-bold">Editing foobar <%= @foobar.id %></h1>

<turbo-frame id="editor">
  <%= render partial: "editor", locals: { foobar: @foobar } %>
</turbo-frame>

<div class="mt-10 flex flex-row">
  <%= link_to "Show this foobar", @foobar, class: "p-3 h-10 bg-green-900 text-gray-100 hover:bg-green-700 border border-green-900 rounded text-sm font-bold mr-4" %>
  <%= link_to "Back to foobars", foobars_path, class: "p-3 h-10 bg-green-900 text-gray-100 hover:bg-green-700 border border-green-900 rounded text-sm font-bold" %>
</div>
